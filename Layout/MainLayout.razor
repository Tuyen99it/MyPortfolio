@inherits LayoutComponentBase
@inject ScrollAnimationService AnimationService
<div class="page">
    <header>
        <NavMenu/>
    </header>
    <main>
        @Body
    </main>
</div>
@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AnimationService.InitializeAsync();
        }
    }
}